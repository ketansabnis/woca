<div class="card w-100">
  <div class="card-body">
    <p>
      Dear <%= @resource.name %>,
    </p>
    <div class="mb-3"></div>
    <p>
      Thank you for registering at <%= @resource.company.name %>. Please confirm your account by clicking the link below and book your Home in 4 easy steps!
    </p>
    <div class="mb-3"></div>
    <%= link_to 'Confirm account', confirmation_url(@resource, confirmation_token: @token) %>
  </div>
</div>
