<section class="auth login-page pb-5">
  <div class="container no-pd">
    <div class="col-lg-5 col-xs-12 col-md-12 col-sm-12 no-pd">
      <div class="login-form-wrapper pt-5">
        <h2 class="font-weight-bold text-success">Change your Password</h2>
        <p class="p-style">Please enter a password of your choice</p>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :put, html: { novalidate: false, class: 'validate-form pb-5', id: 'password_form' }) do |f| %>

          <%= f.hidden_field :reset_password_token %>

          <%= f.input :password, autofocus: true, autocomplete: false, class: 'form-control' %>


          <%= f.input :password_confirmation, autocomplete: false, class: 'form-control' %>

          <div class="form-group">
            <%= f.submit "Change password", class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>



<%= javascript_tag do %>
  $(document).ready(function(){

    $('section.login-page').css('height', $( window ).height() - $('section.login-page').offset().top );
  });
<% end %>